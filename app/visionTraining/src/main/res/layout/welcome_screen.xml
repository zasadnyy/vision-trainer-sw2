<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="@dimen/smart_watch_2_control_width"
                android:layout_height="@dimen/smart_watch_2_control_height"
                android:background="@android:color/white"
                tools:ignore="ContentDescription,PxUsage">

    <TextView
            android:id="@+id/welcome_start_training"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/start_training"
            android:textSize="@dimen/smart_watch_2_text_size_large"
            android:gravity="center"
            android:layout_marginTop="35px"
            android:textColor="@color/main_text"/>

    <TextView
            android:id="@+id/welcome_training_time"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="@string/welcome_it_will_take_only"
            android:textSize="@dimen/smart_watch_2_text_size_medium"
            android:gravity="center"
            android:layout_below="@+id/welcome_start_training"
            android:textColor="@color/secondary_text"/>

    <ImageView
            android:id="@+id/start_training_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:src="@drawable/ic_action_av_play"
            android:layout_alignParentBottom="true"
            android:background="@color/green_button_background"
            android:clickable="true"/>

</RelativeLayout>